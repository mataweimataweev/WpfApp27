<Page x:Class="testGenerator.ThirdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testGenerator"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="350"
      Title="ThirdPage">

    <Grid Background="#FF6347">

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Bodoni MT Black" Margin="68,0,0,0">
            <Run Text="Тестиков пока нет"/>
        </TextBlock>
        <Border Background="#FF4500" BorderThickness="1" Grid.ColumnSpan="2"/>

        <Frame x:Name="FrameForNoTest" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
